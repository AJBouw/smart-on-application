<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:localfont="clr-namespace:SmartOnApp.Resources.Icons"
             xmlns:localLandingPageView="clr-namespace:SmartOnApp.Views.LandingPage"
             xmlns:localCameraPageView="clr-namespace:SmartOnApp.Views.CameraPage"
             xmlns:localTimeSwitchPageView="clr-namespace:SmartOnApp.Views.TimeSwitchPage"
             xmlns:localAboutPageView="clr-namespace:SmartOnApp.Views.AboutPage"
             xmlns:localSettingsPageView="clr-namespace:SmartOnApp.Views.SettingsPage"
             x:Class="SmartOnApp.MainPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ControlTemplate
                x:Key="TabItemControlTemplate">
                <Grid
                    RowDefinitions="*,*"
                    RowSpacing="0"
                    BackgroundColor="{x:StaticResource GrayBlack}">
                    <Image
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="25"
                        HeightRequest="25"
                        Margin="0,10,0,5"
                        Source="{TemplateBinding CurrentIcon}"/>
                    <Label
                        Grid.Row="1"
                        HorizontalOptions="Center"
                        FontFamily="TimesNewRoman"
                        FontSize="12"
                        Text="{TemplateBinding Text}"
                        TextColor="{x:StaticResource WhiteLight}"/>
                </Grid>
            </ControlTemplate>
            <Style
                x:Key="CustomTabStyle"
                TargetType="xct:TabView">
                <Setter
                    Property="IsTabTransitionEnabled"
                    Value="True"/>
                <Setter
                    Property="TabStripHeight"
                    Value="48"/>
                <Setter
                    Property="TabStripPlacement"
                    Value="Bottom"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <xct:TabView Style="{StaticResource CustomTabStyle}">
                <xct:TabView.TabStripBackgroundView>
                    <BoxView Background="White" WidthRequest="30" CornerRadius="20,20,0,0"/>
                </xct:TabView.TabStripBackgroundView>
                <xct:TabViewItem
                    x:Name="Tab1"
                    ControlTemplate="{StaticResource TabItemControlTemplate}"
                    FontFamily="TimesNewRoman"
                    Text="Home">
                    <xct:TabViewItem.Icon>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Home}"/>
                    </xct:TabViewItem.Icon>
                    <xct:TabViewItem.IconSelected>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Home}"/>
                    </xct:TabViewItem.IconSelected>
                    <localLandingPageView:LandingPageView></localLandingPageView:LandingPageView>
                </xct:TabViewItem>
                <xct:TabViewItem
                    x:Name="Tab2"
                    ControlTemplate="{StaticResource TabItemControlTemplate}"
                    FontFamily="TimesNewRoman"
                    Text="Camera">
                    <xct:TabViewItem.Icon>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Video}"/>
                    </xct:TabViewItem.Icon>
                    <xct:TabViewItem.IconSelected>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Video}"/>
                    </xct:TabViewItem.IconSelected>
                    <localCameraPageView:CameraPageView></localCameraPageView:CameraPageView>
                </xct:TabViewItem>
                <xct:TabViewItem
                    x:Name="Tab3"
                    ControlTemplate="{StaticResource TabItemControlTemplate}"
                    FontFamily="TimesNewRoman"
                    Text="TimeSwitch">
                    <xct:TabViewItem.Icon>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Calendar}"/>
                    </xct:TabViewItem.Icon>
                    <xct:TabViewItem.IconSelected>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Calendar}"/>
                    </xct:TabViewItem.IconSelected>
                    <localTimeSwitchPageView:TimeSwitchPageView></localTimeSwitchPageView:TimeSwitchPageView>
                </xct:TabViewItem>
                <xct:TabViewItem
                    x:Name="Tab4"
                    ControlTemplate="{StaticResource TabItemControlTemplate}"
                    FontFamily="TimesNewRoman"
                    Text="About">
                    <xct:TabViewItem.Icon>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Information}"/>
                    </xct:TabViewItem.Icon>
                    <xct:TabViewItem.IconSelected>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Information}"/>
                    </xct:TabViewItem.IconSelected>
                    <localAboutPageView:AboutPageView></localAboutPageView:AboutPageView>
                </xct:TabViewItem>
                <xct:TabViewItem
                    x:Name="Tab5"
                    ControlTemplate="{StaticResource TabItemControlTemplate}"
                    FontFamily="TimesNewRoman"
                    Text="Settings">
                    <xct:TabViewItem.Icon>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Cog}"/>
                    </xct:TabViewItem.Icon>
                    <xct:TabViewItem.IconSelected>
                        <FontImageSource
                            Color="{x:StaticResource Aqua}"
                            FontFamily="MaterialDesignIcons"
                            Glyph="{x:Static localfont:MaterialDesignIcon.Cog}"/>
                    </xct:TabViewItem.IconSelected>
                    <localSettingsPageView:SettingsPageView></localSettingsPageView:SettingsPageView>
                </xct:TabViewItem>
            </xct:TabView>
        </Grid>
    </ContentPage.Content>
</ContentPage>

